@page
@model WeLearn.IdentityServer.Pages.Home.Index

<div class="welcome-page">
    <h1 class="text-4xl font-medium">
        <img src="~/duende-logo.svg" class="logo">
        Welcome to WeLearn IdentityServer
        <small class="text-muted">(version @Model.Version)</small>
    </h1>

    <div class="flex flex-col gap-y-2 mt-4">
        <div><a href="/Account/Login">Login</a></div>
        <div><a href="/Account/Register">Register</a></div>
        <div>
            IdentityServer publishes a
            <a href="~/.well-known/openid-configuration">discovery document</a>
            where you can find metadata and links to all the endpoints, key material, etc.
            <div>Click <a href="~/diagnostics">here</a> to see the claims for your current session.</div>
        </div>
        <div>Click <a href="~/grants">here</a> to manage your stored grants.</div>
        <div>Click <a href="~/ciba/all">here</a> to view your pending CIBA login requests.</div>
    </div>
</div>
